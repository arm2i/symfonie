        <input type="submit" class="btn btn-primary" value="Ajouter la competence" />
        </div>

    </div>
<br>
    <div class="card" style="margin:auto; background:#DB5B48 ">
    <div class="px-4 py-3">
    <h3 class="alert alert-danger card">Liste des compétences éxistantes:</h3>
    {% for key,listecompetence in listecompetence%}
        {{listecompetence.name ~ '-'}}
    {% endfor %}
    </div>
    </div>

         {{ form_end(formCompetence) }}
    </div>

{% endblock %}


