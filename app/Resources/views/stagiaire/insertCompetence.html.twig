        <div class="px-4 py-3">
        {{ form_start(formCompetence) }}
            <h1>Ajouter une compétence</h1>

            {{ form_label(formCompetence.name , 'Compétence : ')}}
            {{ form_widget(formCompetence.name,{ 'attr': {'class': 'input-group-append form-text text-muted', 'placeholder': "saisir compétence..."}} )}}
